<!DOCTYPE html>
<html>
<head>
    <%- include('partials/global-head') %>
    <%- include('partials/main-page-head') %>
    <link rel="stylesheet" href="/styles/side-bar.css">
    <link rel="stylesheet" href="/styles/semesterForm.css">
    <title>Study Planner - Dashboard</title>
</head>
<body>
    <div class="wrapper">
        <%- include('partials/side-bar') %>
        <div class="container">
            <div class="content">
                <h2>Select a Semester </h2>
                <form id="semesterForm" method="post">
                    <select name="semester" id="seasonForm">
                        <% semesterInfo.forEach(function(semester) { %>
                        <option value="<%= semester.season %>"><%= semester.season %></option>
                        <% }); %>
                    </select>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('partials/error-box') %>

    <script>
        // Event listener to the form submit event
        document.getElementById('semesterForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent form submission
            var selectedSemester = document.getElementById('seasonForm').value;
            
            console.log('Selected Semester:', selectedSemester);
        });
    </script>
</body>
</html>
