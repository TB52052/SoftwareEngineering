        <!-- More deadlines can be added here -->
    </div>
</div>

<!-- Deadlines Tab -->
<div id="deadlines" class="tabcontent">
    <h2>Deadlines</h2>
    <div class="deadline-grid">
        <div class="deadline-card current">
            <h3><i class="fas fa-check-circle"></i> Deadline 5</h3>
            <div class="progress-bar">
                <div class="progress" style="width: 100%;"></div>
            </div>
            <p>Task 9</p>
            <p>Task 10</p>
        </div>
        <div class="deadline-card current">
            <h3><i class="fas fa-check-circle"></i> Deadline 6</h3>
            <div class="progress-bar">
                <div class="progress" style="width: 90%;"></div>
            </div>
