<body>
    <div class="wrapper">
        <%- include('partials/side-bar') %>
        
        <div class="container">
            <div class="content">
                <div class="tabs-container">
                    <div class="tabs">
                        <button class="tablinks" onclick="openTab(event, 'missed-deadlines')">Missed Deadlines</button>
                        <button class="tablinks" onclick="openTab(event, 'upcoming-deadlines')">Upcoming Deadlines</button>
