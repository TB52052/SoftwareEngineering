<!DOCTYPE html>
<html>
<head>
    <%- include('partials/global-head') %>
    <%- include('partials/main-page-head') %>
    <link rel="stylesheet" href="/styles/side-bar.css">
    <link rel="stylesheet" href="/styles/semesterForm.css">
    <link rel="stylesheet" href="/styles/fileForm.css">
    <script src="/scripts/fileManagement.js"></script>
    <title>Study Planner - Dashboard</title>
</head>
<body>
    <div class="wrapper">
        <%- include('partials/side-bar') %>
        <div class="container">
            <div class="content">
                <h2>Select a Semester </h2>
                <form id="semesterForm">
                    <select name="semester" id="seasonForm">
                        <% semesterInfo.forEach(function(semester) { %>
                        <option value="<%= semester.season %>"><%= semester.season %></option>
                        <% }); %>
                    </select>
                    <button type="submit">Submit</button>
                </form>
                
                <div id="fileForm">
                    <input id="fileInputForm" type="file" id="myFile" name="filename" accept=" .csv">
                    <input type="submit">
                    <button onclick="checkFileName()"> Check File Name </button>
                </div>


            </div>
            
        </div>
    </div>
    <%- include('partials/error-box') %>

</body>
</html>