<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head') %>
        <title>Study Planner - Login</title>
        <link rel="stylesheet" href="/styles/index.css">
    </head>
    <body>
        <%- include('partials/top-bar') %>

        <div class="login-page">
            <div class="login-header">
                <span class="login-title">Account Sign In</span>
                <form class="login-form">
                    <input class="input-group" type="text" placeholder="Username" name="username" required>
                    <input class="input-group" type="password" placeholder="Password" name="password" required>
                    <div class="login-button">
                        <button class="input-button" type="submit">Sign In </button>
                    </div>
                </form>
                <div class="register-link">
                    <a href="/register">New User?</a>
                </div>
            </div>
        </div>
    </body>
</html>
